{
  "name": "temporal-timer",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc --build ./tsconfig.json",
    "build.once": "tsc --build --watch ./tsconfig.json",
    "lint": "eslint .",
    "start": "ts-node src/worker.ts",
    "start.watch": "nodemon src/worker.ts",
    "test": "mocha --require ts-node/register --require source-map-support/register src/test/*.test.ts",
    "test.watch": "mocha --require ts-node/register --require source-map-support/register src/test/*.test.ts -w --watch-files src",
    "workflow-fast": "ts-node src/clients/fast.ts",
    "workflow-slow": "ts-node src/clients/slow.ts",
    "workflow-updating": "ts-node src/clients/updating-timer.ts"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "ts-node"
    },
    "ext": "ts",
    "watch": [
      "src"
    ]
  },
  "dependencies": {
    "@temporalio/activity": "^1.10.3",
    "@temporalio/client": "^1.10.3",
    "@temporalio/worker": "^1.10.3",
    "@temporalio/workflow": "^1.10.3",
    "axios": "0.28.0",
    "dotenv": "^10.0.0"
  },
  "devDependencies": {
    "@temporalio/testing": "^1.10.3",
    "@tsconfig/node16": "^1.0.0",
    "@types/mocha": "^9.1.1",
    "@types/ms": "^0.7.31",
    "@types/node": "^16.11.43",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-deprecation": "^1.2.1",
    "mocha": "^10.0.0",
    "ms": "^2.1.3",
    "nodemon": "^2.0.12",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2",
    "uuid": "^8.3.2"
  }
}
